@model Apolices.Web.Models.SeguroModel

<form asp-action="Update" asp-antiforgery="true">
    @Html.AntiForgeryToken()
    <input asp-for="Id" hidden>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Atualizar</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="col-2">
                <label asp-for="Seguradora" class="control-label pt-2" style="font-size:17px"> Seguradora</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Seguradora"  class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="NumeroApolice" class="control-label pt-2" style="font-size:17px"> Número da Apólice</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NumeroApolice"  class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ValorPremio" class="control-label pt-2" style="font-size:20px;">Premio</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ValorPremio" maxlength="10" oninput="formatarValor(this)" class="form-control" id="valorPremio" />
                <span asp-validation-for="ValorPremio" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="DataAquisicaoApolice" class="control-label pt-2" style="font-size:20px;">Data de Aquisição</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DataAquisicaoApolice" class="form-control" id="dataAquisicaoApolice" oninput="formatarData(this)" maxlength="10" />
                <span asp-validation-for="DataAquisicaoApolice" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="FrequenciaPagamento" class="control-label pt-2" style="font-size:20px;">Frequência de Pagto</label>
            </div>
            <div class="col-10 pb-3" style="padding-top:4px;">
                @Html.DropDownList("frequenciaPagamento")
            </div>
            <div class="col-2" style="padding-top:5px">
                <label asp-for="Satisfacao" class="control-label pt-2" style="font-size:20px;">Por que você adquiriu a apólice? Está satisfeito com a apólice?</label>
            </div>
            <div class="col-10 pb-3" style="padding-top:5px">
                <textarea asp-for="Satisfacao" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Satisfacao" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Atualizar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function formatarData(input) {
            // Remove qualquer caractere que não seja número
            var valor = input.value.replace(/\D/g, '');

            // Adiciona a barra de separação nas posições corretas
            if (valor.length > 2 && valor.length <= 4) {
                valor = valor.replace(/^(\d{2})(\d{2})/, '$1/$2');
            } else if (valor.length > 4) {
                valor = valor.replace(/^(\d{2})(\d{2})(\d{4})/, '$1/$2/$3');
            }

            // Atualiza o valor do campo de entrada
            input.value = valor;
        }
    </script>

    <script>
        function formatarValor(input) {
            // Remove tudo que não for número ou vírgula
            let valorFormatado = input.value.replace(/[^0-9,]/g, '');

            // Substitui a vírgula por ponto se houver mais de uma vírgula
            valorFormatado = valorFormatado.replace(/,+/g, ',');

            // Atualiza o valor no campo
            input.value = valorFormatado;
        }
    </script>

}
